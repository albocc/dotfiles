pcm.!default {
    type plug
    slave.pcm "asymed"
}


pcm.asymed {
    type asym
    playback.pcm {
        @func getenv
        vars [ ALSAPCM ]
        default "dmixer"
    }
    capture.pcm "dsnoop"
}

pcm.dmixer {
    type dmix
    ipc_key 1024
    slave {
        pcm "hw:1"
    }
}

